<h1>Statements for <%= @store.title %> </h1>

<%= link_to 'Back', admin_lrs_index_path, class: "btn btn-default btn-xs" %>

<table id="statements" class="table table-hover table-striped table-condensed">
  <thead>
  <tr>
    <td>ID</td>
    <td></td>
  </tr>
  </thead>

  <% @statements.each do |statement| %>
      <tr>
        <td><%= statement.id %></td>
        <td>
          <%= link_to 'View', '#', data: {toggle: 'modal', target: "##{statement.id}"} %>
          <%= render 'statement_details', statement: statement %>
        </td>
      </tr>
  <% end %>
</table>

<%= paginate @statements %>